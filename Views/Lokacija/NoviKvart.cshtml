@model IamHungry.Models.Kvart
<br><br><br>
@if(ViewBag.FAILKVART != null)
{
    <h3>
        <b>
            @ViewBag.FAILKVART
        </b>
    </h3>
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2>Kvart</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
 

        <div class="form-group">
            @Html.LabelFor(model => model.PostBroj, "Poštanski broj", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PostBroj", (SelectList)ViewBag.gradNK, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PostBroj, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ImeKvarta, "Ime kvarta", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ImeKvarta, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ImeKvarta, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Izgradi kvart" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Povratak na registraciju restorana", "RegisterRestorana", "Account")
</div>

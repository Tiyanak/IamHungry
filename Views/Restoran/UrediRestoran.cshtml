                @Html.DropDownList("PostBroj", (SelectList)ViewBag.Grad2, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PostBroj, "", new { @class = "text-danger" })
            </div>
        </div>


                @Html.ValidationMessageFor(model => model.ImeJela, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OpisJela, "Opis jela", htmlAttributes: new { @class = "control-label col-md-2" })
